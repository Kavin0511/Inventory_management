<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".ui.account.accountFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/scrollView2"
        android:id="@+id/scrollView"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearlayout"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:gravity="center"
            android:elevation="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:padding="10dp"
                android:id="@+id/user_name"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:background="@drawable/text_vehicle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_baseline_smartphone_24"
                android:padding="10dp"
                android:id="@+id/phone"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:background="@drawable/text_vehicle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_baseline_local_post_office_24"
                android:padding="10dp"
                android:id="@+id/address"
                android:layerType="software"
                android:autoSizeTextType="uniform"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"

                android:background="@drawable/text_vehicle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                android:padding="10dp"
                android:id="@+id/mailid"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/text_vehicle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:textColor="#000"
                android:text="Equipments owned : "
                />
        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:elevation="10dp"
        android:id="@+id/scrollView2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vehicles"
            android:orientation="vertical"
            android:gravity="top">
        </LinearLayout>
    </ScrollView>
        <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/add_vehicle"
        android:textAllCaps="false"
        android:text="Add Equipment"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/scrollView2"
        android:background="@drawable/btn_custom"
        android:textColor="#fff"/>

</LinearLayout>